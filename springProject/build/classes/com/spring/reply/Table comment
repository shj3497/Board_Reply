CREATE TABLE SPRING_STUDY_REPLY(
	R_NUM 		VARCHAR2(20) PRIMARY KEY ,
	B_NUM 		VARCHAR2(20) REFERENCES SPRING_STUDY_BOARD(B_NUM) ,
	R_NAME 		VARCHAR2(10) NOT NULL ,
	R_CONTENT 	VARCHAR2(2000) NOT NULL ,
	R_PWD 		VARCHAR2(18) NOT NULL ,
	R_DATE 		DATE DEFAULT SYSDATE
) ;


COMMENT ON TABLE  SPRING_STUDY_REPLY IS '댓글 정보';

COMMENT ON COLUMN SPRING_STUDY_REPLY.R_NUM IS '댓글번호';
COMMENT ON COLUMN SPRING_STUDY_REPLY.B_NUM IS '게시판 글번호';
COMMENT ON COLUMN SPRING_STUDY_REPLY.R_NAME IS '댓글 작성자';
COMMENT ON COLUMN SPRING_STUDY_REPLY.R_CONTENT IS '댓글 내용';
COMMENT ON COLUMN SPRING_STUDY_REPLY.R_PWD IS '댓글 비밀번호';
COMMENT ON COLUMN SPRING_STUDY_REPLY.R_DATE IS '댓글 등록일'; 