CREATE TABLE SPRING_STUDY_BOARD(
	B_NUM 		VARCHAR2(20) 	PRIMARY KEY ,
	B_NAME 		VARCHAR2(10) 	NOT NULL ,
	B_TITLE		VARCHAR2(1000) 	NOT NULL ,
	B_CONTENT 	VARCHAR2(1000),
	B_FILE 		VARCHAR2(800),
	B_PWD 		VARCHAR2(20) 	NOT NULL,
	B_DELYN		VARCHAR2(1),
	B_INSERTDATE	DATE,
	B_UPDATEDATE	DATE
) ;
COMMENT ON TABLE SPRING_STUDY_BOARD IS '게시판 정보';
COMMENT ON COLUMN SPRING_STUDY_BOARD.B_NUM IS '게시판순번';
COMMENT ON COLUMN SPRING_STUDY_BOARD.B_NAME IS '게시판작성자';
COMMENT ON COLUMN SPRING_STUDY_BOARD.B_TITLE IS '게시판제목';
COMMENT ON COLUMN SPRING_STUDY_BOARD.B_CONTENT IS '게시판내용'
COMMENT ON COLUMN SPRING_STUDY_BOARD.B_FILE IS '게시판첨부파일';
COMMENT ON COLUMN SPRING_STUDY_BOARD.B_PWD IS '게시판비밀번호';
COMMENT ON COLUMN SPRING_STUDY_BOARD.B_DELYN IS '삭제여부';
COMMENT ON COLUMN SPRING_STUDY_BOARD.B_INSERTDATE IS '게시판등록일';
COMMENT ON COLUMN SPRING_STUDY_BOARD.B_UPDATEDATE IS '게시판수정일';